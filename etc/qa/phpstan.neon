			identifier: shipmonk.checkedExceptionInYieldingMethod
			path: ../../utils/ListFunctions.php
			count: 2
		-
			identifier: shipmonk.checkedExceptionInYieldingMethod
			path: ../../utils/Rules/UseNonBlockingImplementationsRulePopulator.php
			count: 2
includes:
	- ../../extension.neon
