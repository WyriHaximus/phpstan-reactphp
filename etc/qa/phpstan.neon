parameters:
	level: max
	paths:
		- ../../etc
		- ../../src
		- ../../tests
		- ../../utils
	excludePaths:
		- ../../utils/data/*
	ergebnis:
		noExtends:
			classesAllowedToBeExtended:
				- PHPStan\Testing\RuleTestCase
	ignoreErrors:
		-
			identifier: shipmonk.checkedExceptionInYieldingMethod
			path: ../../utils/ListFunctions.php
			count: 1
